<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F9">

    <!-- WEBVIEW (Modo Web) -->
    <FrameLayout
        android:id="@+id/webContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <!-- MODO APP (Nativo) - CON SCROLLVIEW -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nativeContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Header Card - MÁS COMPACTO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="Logo"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_comisariato_sur"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintDimensionRatio="4:1" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Percheo de Precios"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#111827"
                        app:layout_constraintTop_toBottomOf="@id/imgLogo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Escanea o ingresa el código del producto"
                        android:textSize="13sp"
                        android:textColor="#6B7280"
                        app:layout_constraintTop_toBottomOf="@id/txtTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Input Card - MÁS COMPACTO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtInputHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Buscar Producto"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#111827"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutCodigo"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Código"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/brand_primary"
                        app:hintTextColor="@color/brand_primary"
                        app:endIconMode="clear_text"
                        app:startIconDrawable="@android:drawable/ic_menu_search"
                        app:startIconTint="@color/brand_primary"
                        app:layout_constraintTop_toBottomOf="@id/txtInputHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/btnBuscar"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editCodigo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:imeOptions="actionSearch"
                            android:textSize="14sp"
                            android:textColor="#111827"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Buscar"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        app:cornerRadius="12dp"
                        app:icon="@android:drawable/ic_menu_search"
                        app:iconGravity="textStart"
                        app:layout_constraintTop_toTopOf="@id/inputLayoutCodigo"
                        app:layout_constraintBottom_toBottomOf="@id/inputLayoutCodigo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/inputLayoutCodigo"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Product Card - MÁS COMPACTO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtProductHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Información del Producto"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtCodigo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Código: -"
                        android:textSize="14sp"
                        android:textColor="#374151"
                        app:layout_constraintTop_toBottomOf="@id/txtProductHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtDescripcion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Descripción: -"
                        android:textSize="14sp"
                        android:textColor="#374151"
                        app:layout_constraintTop_toBottomOf="@id/txtCodigo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/txtPvp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="PVP: -"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:textColor="#0E9E87"
                        app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons - MÁS COMPACTOS -->
            <!-- Buttons - SIN ESPACIO EXTRA -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/scan_product"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="textStart"
                app:layout_constraintTop_toBottomOf="@id/cardProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrint"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/print_label"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:enabled="false"
                app:cornerRadius="14dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart"
                app:backgroundTint="@color/btn_print_tint"
                android:textColor="@color/btn_print_text"
                app:layout_constraintTop_toBottomOf="@id/btnScan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Toggle (Web/App) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mode_web"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>